{
  "name": "project-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate to start ES2015 projects with Babel, Express, Travis and Browserify.",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run start-server",
    "start-server": "node dist/server.js",
    "build": "browserify src --out-dir dist -t babelify",
    "test": "standard"
  },
  "author": "Albert Salim",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.17",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "express": "^4.13.3"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1",
    "standard": "^5.4.1"
  }
}
